
<h1 class="mb-5 text-center" style="margin-top: -2.5rem">Public Recipes</h1>

<div class="tab-content d-flex justify-content-center">
<div class="tab-pane fade show active border rounded p-5" style="width: 57%" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
<table class="table table-borderless pt-3">
<% @recipes.each do |recipe| %>
  <% @ingredients = @recipe_foods.where(recipe_id: recipe.id) %>
  <% @total_price = 0 %>
  <% @ingredients.each do |item| %>
    <% @total_price += item.food.price * item.quantity %>
    <% end %>
    <tbody class="border border-primary-subtle public-recipe">
    <tr class="t2">
      <td><h4><%= link_to recipe.name, recipe %></h4></td>
      <td><%= recipe.description %></span></td>
    </tr>

    <tr class="t2">
      <td>By: <strong><%= recipe.user.name %></strong></td>
      <td><strong>The total price: $<%= @total_price %></strong></td>
    </tr>

    </tbody>
    <% end %>
</table>
  </div>
  </div>
